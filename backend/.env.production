# Production Environment Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=production-jwt-secret-key-change-this-in-actual-production
JWT_EXPIRES_IN=24h

# Google OAuth - Set these in your production environment
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# LLM Service - Google Gemini - Set this in your production environment
GEMINI_API_KEY=your-gemini-api-key-here

# External APIs (Production)
AMADEUS_API_KEY=replace-with-your-amadeus-key
AMADEUS_API_SECRET=replace-with-your-amadeus-secret
BOOKING_COM_API_KEY=replace-with-your-booking-com-key
GOOGLE_PLACES_API_KEY=replace-with-your-google-places-key

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=100
LLM_RATE_LIMIT_PER_MINUTE=20

# CORS Configuration - Allow development and production origins
ALLOWED_ORIGINS=https://ai.zackz.net,http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:5173

# Digital Ocean Spaces (for PDF storage)
DO_SPACES_ENDPOINT=
DO_SPACES_BUCKET=
DO_SPACES_ACCESS_KEY_ID=
DO_SPACES_SECRET_ACCESS_KEY=

# Logging
LOG_LEVEL=info